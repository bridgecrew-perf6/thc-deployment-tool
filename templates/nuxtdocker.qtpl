{% func Nuxtdocker(portSelected string) %}
# build stage
FROM node:16-alpine3.14 as build-stage
ENV HOST 0.0.0.0
ENV PORT {{portSelected}}

WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build

# production stage
EXPOSE {%s portSelected %}

# Start command
CMD [ "npm", "start" ]

{% endfunc %}